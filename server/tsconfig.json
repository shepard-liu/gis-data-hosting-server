{
    
    "buildOptions": {
        "incremental": true
    },
    "compilerOptions": {
        "lib": [
            "ES2019",
            "DOM"
        ],
        "noImplicitAny": true,
        "target": "ES6",
        "module": "commonjs",
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "jsx",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"

    },
    "include": [
        "./node_modules/@arcgis/core/interfaces.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
    
}